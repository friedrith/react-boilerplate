{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "globals": {
    "fetch": false,
    "firebase": false,
    "ROOT_PATH": true
  },
  "env": {
    "browser": true
  },
  "rules": {
    "semi": [2, "never"],
    "indent": ["error", 2],
    "import/extensions": ["error", "never", { "svg": "always" }]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./config/webpack.config.dev.js"
      }
    }
  }
}
